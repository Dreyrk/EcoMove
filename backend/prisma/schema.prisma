generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  password      String    // password hashé
  teamId        Int
  role          UserRoleType @default(USER)
  createdAt     DateTime  @default(now())

  team          Team      @relation(fields: [teamId], references: [id])
  activities    Activity[]
}

model Team {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  users       User[]
}

model Activity {
  id          Int       @id @default(autoincrement())
  userId      Int
  date        DateTime
  type        ActivityType
  distanceKm  Float     // Calculée si steps
  steps       Int?      // Optionnel validation faite via l'application
  createdAt   DateTime  @default(now())

  user        User      @relation(fields: [userId], references: [id])

  @@unique([userId, date]) // Une activité par jour par utilisateur
}

enum ActivityType {
  VELO
  MARCHE
}

enum UserRoleType {
  USER
  ADMIN
}
